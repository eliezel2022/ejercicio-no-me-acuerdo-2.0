#include <stdio.h>

int main(void) 
{int NUM;
  printf("ingres el numero de serie:");
  scanf("%d", &NUM);
  if(NUM > 0)
  {
    printf("\nserie de ULam\n");
    printf("%d \t", NUM);
    while(NUM != 1)
      {
        if((NUM != 1) > 0)
  NUM = NUM / 2;
        else
          NUM = NUM * 3 + 1;
        printf("%d \t", NUM);
        }
    }
  printf("\n NUM de ser positivo");
  return 0;
}
